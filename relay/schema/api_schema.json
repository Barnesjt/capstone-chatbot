{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "pattern": "^[0-9a-zA-Z ]+$",
            "minLength": 2,
            "maxLength": 64
        },
        "id": {
            "type": "string",
            "pattern": "^[a-f0-9]{8}\\-([a-f0-9]{4}\\-){3}[a-f0-9]{12}$",
            "minLength": 36,
            "maxLength": 36
        },
        "command": {
            "type": "string",
            "pattern": "^(listvservers|listservices|countvservers|listservicegroups|enable|disable|disablenow)$"
        },
        "target": {
            "type": "string",
            "pattern": "^[0-9a-zA-Z \\-\\_\\#\\.\\:\\@\\=]",
            "minLength": 1,
            "maxLength": 128
        },
        "totp": {
            "type":"string",
            "pattern": "^[0-9]{6}$",
            "minLength":6,
            "maxLength": 6
        }
    },
    "required": ["name", "id", "command", "target", "totp"],
    "additionalProperties": false
}